<?xml version='1.0' encoding='utf-8'?>
<featureGroup>
  <feature name="IDP Camp">
    <category>HOTFeatures</category>
    <icon image="features/hot.png">
      <font size="16pt"><b>${name}</b></font><br/>
      <font size="10pt">${address:city}</font>
    </icon>
    <point/>
	<tag k="camp" v="yes"/>
	<tag k="camp_management_agency" v="unspecified"  vmatch="unspecified|yes|no" />
	<inputSet ref="HOT ID" />
	<inputSet ref="HOT Name" />
	<inputSet ref="HOT Address" />
	<inputSet ref="HOT Spatial Signature" />
	<inputSet ref="HOT Operating Institution" />
	<inputSet ref="HOT Contact Information" />
    <inputSet ref="HOT IDP Camp Site" />
	<inputSet ref="HOT Operational_status" />
	<inputSet ref="HOT Source" />
  </feature>
  <feature name="School">
    <category>HOTFeatures</category>
    <icon image="features/hot.png">
      <font size="16pt"><b>${name}</b></font><br/>
      <font size="10pt">${address:city}</font>
    </icon>
    <point/>
	<tag k="amenity:hot" v="school" />
	<inputSet ref="HOT ID" />
	<inputSet ref="HOT Name" />
	<inputSet ref="HOT Address" />
	<inputSet ref="HOT Spatial Signature" />
	<inputSet ref="HOT Operating Institution" />
	<inputSet ref="HOT Contact Information" />
	<inputSet ref="HOT  School" />
	<inputSet ref="HOT Operational_status" />
	<inputSet ref="HOT Source" />
  </feature>
  <feature name="Electricy network">
    <category>HOTFeatures</category>
    <icon image="features/hot.png">
      <font size="16pt"><b>${name}</b></font><br/>
      <font size="10pt">${Classe}</font>
    </icon>
    <line/>
	<tag k="classe" v="unspecified" match="conduite|ligne_electrique|poste_transformation|pylone"/>
	<inputSet ref="HOT Electricy network" />
  </feature>
  <feature name="Health Facilities">
    <category>HOTFeatures</category>
    <icon image="features/hot.png">
      <font size="16pt"><b>${name}</b><br />${type}</font><br/>
      <font size="10pt">${address:city}</font>
    </icon>
    <point/>
    <area/>
	<tag k="amenity:hot" v="hospital" />
	<inputSet ref="HOT ID" />
	<inputSet ref="HOT Name" />
	<inputSet ref="HOT Address" />
	<inputSet ref="HOT Spatial Signature" />
	<inputSet ref="HOT Operating Institution" />
	<inputSet ref="HOT Contact Information" />
	<inputSet ref="HOT Health Facility Type" />
    <inputSet ref="HOT Source" />
  </feature>
  <feature name="Roads">
    <category>HOTFeatures</category>
    <icon image="features/hot.png">
      <font size="16pt"><b>${name}</b></font><br/>
      <font size="10pt">${Operational Status}</font>
    </icon>
    <line/>
	<tag  k="highway:hot"  v="road"	vmatch="primary|secondary|tertiary|footway|track|unspecified"	/>
	<inputSet ref="HOT Road type" />
	<inputSet ref="HOT Operational_status" />
	<inputSet ref="HOT Roads" />
	<inputSet ref="HOT Practicability" />
    <inputSet ref="HOT Source" />
  </feature>
  <feature name="Transport Obstacles">
    <category>HOTFeatures</category>
    <icon image="features/hot.png">
      <font size="16pt"><b>${name}</b></font><br/>
      <font size="10pt">${type}</font>
    </icon>
    <point/>
	<tag  k="highway:hot" v="road"	vmatch="primary|secondary|tertiary|footway|track|unspecified"	/>
	<inputSet ref="HOT Transport Obstacles" />
	<inputSet ref="HOT Operational_status" />
	<inputSet ref="HOT Practicability" />
    <inputSet ref="HOT Source" />
  </feature>
  <feature name="WaterPoint">
    <category>HOTFeatures</category>
    <icon image="features/hot.png">
      <font size="16pt"><b>${name}</b></font><br/>
      <font size="10pt">${Waterpoint Type}</font>
    </icon>
    <point/>
	<tag k="man_made" v="unspecified"  vmatch="tap|well|tank|bladder|unspecified"/>
    <inputSet ref="HOT WaterPoint" />
    <inputSet ref="HOT Source" />
  </feature>
</featureGroup>